<body>


  <% include ./partials/header %>

     <br>
    <div class="container">
      <!--adding a new todo-->
      <div class="container add-item" id="new-todo" action="/todo" method="POST">
      <div class="d-flex">
      <form class="input-group p-2" method="post" action="/todo/add">
        <input id="itemInput" class="form-control todo-item" placeholder="Add a ToDo!" name="item">
        <button id="itemSubmit" class="btn btn-secondary input-group-addon add-btn">Add</button>
      </form>
    </div>
    </div>
    <br><br>

    <h2 style="text-align: center;">A List of Your TODOS</h2>
    <br>

          <!--list of the categories-->
        <div class="row">
      <div class="col-sm-4">
        <div class="card text-dark bg-light">
        <div class="card-header bg-dark text-center text-light"><h4>To Eat</h4></div>
          <div class="card-body ">
            <!--Starting list todo items here -->
                <div class="list-group">
                  <table class="table">
                    <tbody>
                      <% for (let user of users) { %>
                        <%if (user.category === 'eat' ){%>
                        <tr>
                          <td><%= user.todoitem %> </td>
                          <td>

                            <!--edit and delete buttons-->
                            <div>
                              <a href="/todo/<%= user.todoId%>">
                                <input
                                  style="padding:2px 8px; margin-right: 0.5em;"
                                  class=" trigger_popup btn btn-outline-primary"
                                  type="submit"
                                  value="Edit"
                                />
                              <form style="display: inline-block;" method="POST" action="/todo/<%= user.todoid %>/delete">
                              <button style="padding:2px;" class="btn btn-outline-danger">Delete</button>
                            </form>
                          </div>
                          </td>
                        </tr>
                        <% }  %>
                        <% }  %>
                    </tbody>
                  </table>
                </div>
              <!--Ends here -->
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card text-dark bg-light">
        <div class="card-header bg-dark text-center text-light"><h4>To Read</h4></div>
          <div class="card-body ">
                <div class="list-group">
                  <table class="table">
                    <tbody>
                      <% for (let user of users) { %>
                        <%if (user.category === 'read' ){%>
                        <tr>
                          <td><%= user.todoitem %> </td>
                          <td>
                            <!--edit and delete buttons-->
                            <div>
                              <form style="display: inline-block;" >
                                <button style="padding:2px 8px; margin-right: 0.5em;" class=" trigger_popup btn btn-outline-primary">Edit</button>
                                </form>
                                <form style="display: inline-block;" method="POST" action="/todo/<%= user.todoid %>/delete">
                                  <button style="padding:2px;" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>
                          </td>
                        </tr>
                        <% }  %>
                        <% }  %>
                    </tbody>
                  </table>
                </div>
              <!--Ends here -->
          </div>
        </div>
      </div>


      <div class="col-sm-4">
        <div class="card text-dark bg-light">
        <div class="card-header bg-dark text-center text-light"><span style="white-space: nowrap;"><h4>To Watch</h4></div>
          <div class="card-body ">
