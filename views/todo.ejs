    <div class="container">
      <!--adding a new todo-->
      <div class="container add-item" id="new-todo" action="/todo" method="POST">
      <div class="d-flex">
      <span class="input-group p-2">
        <input id="todo-name" class="form-control todo-item" placeholder="Add a ToDo!" name="todo">
        <button id="itemSubmit" class="btn btn-secondary input-group-addon add-btn">Add</button>
      </span>
    </div>
    </div>
    <br><br>

    <h2 style="text-align: center;">A List of Your TODOS</h2>
    <br>

          <!--list of the categories-->
        <div class="row">
      <div class="col-sm-4">
        <div class="card text-dark bg-light">
        <div class="card-header bg-dark text-center text-light"><h4>To Eat</h4></div>
          <div class="card-body ">
            <!--Starting list todo items here -->
                <div class="list-group">
                  <table class="table">
                    <thead>

                    </thead>
                    <tbody>
                      <% for(const todo of todos_data) { %>
                        <tr>
                          <td>
                            <%= todo.name %>
                          </td>
                          <td>
                            <form method="GET"  action="/todo/editEatery"><button type="submit" class="btn btn-outline-success">
                                edit
                              </button></form>
                          </td>
                          <td>
                            <form method="get" action="/">
                              <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
            
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
                </div>
              <!--Ends here -->
          </div>
          <div class="card-footer bg-secondary border-danger text-right">
          </div>
        </div>
      </div>
