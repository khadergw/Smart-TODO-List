                                <button style="padding:2px;" class="btn btn-outline-danger">Delete</button>
                              </form>
                            </div>
                          </td>
                        </tr>
                        <% }  %>
                        <% }  %>
                    </tbody>
                  </table>
              <!--Ends here -->
          </div>
        </div>
      </div>
    </div>


    </div>
    <br><br>
