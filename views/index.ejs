  <header class="nav-bar">
    <nav>
      <div>
        <p id="welcome" href="/"><strong>Welcome User</strong></p>
      </div>
        <div>
            <a href="/edit_profile">Edit Profile</a>

              <a href="/logout">Logout</a>

